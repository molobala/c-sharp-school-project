@using Entity
@model Entity.Vehicule
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    @using (Html.BeginForm("EditVehicule", "Admin", FormMethod.Post, new {@class = "form"}))
    {
        <div class="modal-body">
            @Html.Hidden("id",@Model.Id);
            <div class="form-group">
                @Html.LabelFor(vehicule => vehicule.Name,new {@class="control-label"})
                @Html.TextBoxFor(vehicule=>vehicule.Name,new {@class="form-control"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(vehicule => vehicule.Description,new {@class="control-label"})
                @Html.TextAreaFor(vehicule=>vehicule.Description,new {@class="form-control"})
                @Html.ValidationMessageFor(model => model.Description,"Error",new {@class="alert alert-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(v=>v.CompanyId)
                @Html.DropDownListFor(v => v.CompanyId, (SelectList) ViewBag.listCompanies, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.CompanyId, "Error", new {@class = "alert alert-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(v=>v.Type)
                @Html.DropDownListFor(v => v.Type, (SelectList) ViewBag.vehiculeTypes, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Type, "Error", new {@class = "alert alert-danger"})
            </div>
        </div>
        <div class="modal-footer">
            <div class="row">
                <span class="badge pointer btn pull-left ret">@Html.ActionLink("Go to Home","Index","Admin")</span>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>
    }
</div>
