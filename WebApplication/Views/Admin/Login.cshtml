@{
    ViewBag.Title = "Login Page";
    Layout = null;
}
@model Entity.UserViewModel
<html>
<head>
    <title>Login - Admin </title>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
    <link rel="stylesheet" href="~/Content/font-awesome.css"/>
    <link rel="stylesheet" href="~/Content/jquery.datetimepicker.min.css"/>
    <link rel="stylesheet" href="~/Content/site.css"/>
</head>
<body style="position: absolute; left: 0; top: 0; height: 100%; width: 100%;">
    <div class="container" style="margin-top: 60px;">
        <div class="row">
            <div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
                @if (Model.IsAuthenticated)
                {
                    <div class="alert alert-info">
                        Vous êtes déjà connecté.
                        <span class="badge pointer btn pull-right ret">@Html.ActionLink("Go to Admin Panel","Index","Admin")</span>
                    </div>
                }
                else
                {
                    using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @Html.LabelFor(m=>m.User.Email, new {@class = "control-label"})
                            @Html.TextBoxFor(m=>m.User.Email, "", new {@class = "form-control", placeholder = "Votre email"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.User.Password, new {@class = "control-label"})
                            @Html.TextBoxFor(m=>m.User.Password, "", new {type = "password", @class = "form-control", placeholder = "Le login"})
                            @Html.ValidationMessageFor(m=>m.User.Email)
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Login</button>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>
