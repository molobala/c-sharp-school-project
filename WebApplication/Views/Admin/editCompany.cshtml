@using Entity
@model Entity.Company
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    @using (Html.BeginForm("editCompany", "Admin", FormMethod.Post, new {@class = "form"}))
    {
        <div class="modal-body">
            @Html.Hidden("id",@Model.Id);
            <div class="form-group">
                @* <label for="cname">Company Name</label>
                <input type="text" placeholder="company name" id="cname" name="cname" class="form-control"/>*@
                @Html.LabelFor(company => company.Name,new {@class="control-label"});
                @Html.TextBoxFor(company=>company.Name,new {@class="form-control"});
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(company => company.Description,new {@class="control-label"});
                @Html.TextAreaFor(company=>company.Description,new {@class="form-control"});
                @Html.ValidationMessageFor(model => model.Description,"Error",new {@class="alert alert-danger"})
            </div>
            @Html.Hidden("postType", "COMPANY");
        </div>
        <div class="modal-footer">
            <div class="row">
                <span class="badge pointer btn pull-left ret">@Html.ActionLink("Go to Home","Index","Admin")</span>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>
    }
</div>
